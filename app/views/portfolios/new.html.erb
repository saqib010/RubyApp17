<h1> new portfolio item<h1>

	<%= form_with(model: @portfolio_items) do |form| %>
<br>
  <div class="field">
    <%= form.label :title %>
    <br>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <br>
    <%= form.text_field :subtitle %>
  </div>


  <div class="field">
    <%= form.label :body %>
    <br>
    <%= form.text_area :body %>
  </div>

  <ul>
    <%= form.fields_for :technologis do |technology_form| %>

    <li>
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name %>
    </li>
    <% end %>
  </ul>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
